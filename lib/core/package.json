{
  "name": "@ddd-framework/core",
  "version": "1.0.6",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": "rmolinamir/ddd-framework",
  "files": [
    "dist"
  ],
  "types": "dist",
  "main": "./dist/index.js",
  "scripts": {
